BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: on_press: app.handle_increment(-1)
    Button:
        text: 'Square'
        font_size: 24
        on_press: app.handle_calculate(int(input_number.text))
    Label:
        id: output_label
        font_size: 48
        color: (0, 1, 1, 1)
    Label:
        text: 'Enter a number and press "Square"'
        color: (1, 0, 1, 1)
        font_size: 24
